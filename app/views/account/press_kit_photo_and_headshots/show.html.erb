<%= render 'account/shared/page' do |p| %>
  <% p.content_for :title, t('.section') %>
  <% p.content_for :body do %>
    <%= render 'account/shared/box', divider: true do |p| %>
      <% p.content_for :title, t('.header') %>
      <% p.content_for :description do %>
        <%= t('.description') %>
        <%= t('.manage_description') if can? :manage, @press_kit_photo_and_headshot %>
      <% end %>

      <% p.content_for :body do %>
        <% with_attribute_settings object: @press_kit_photo_and_headshot, strategy: :label do %>
          <%= render 'shared/attributes/text', attribute: :title %>
          <%= render 'shared/attributes/text', attribute: :description %>
          <%= render 'shared/attributes/text', attribute: :dimensions_wxh %>
          <%= render 'shared/attributes/text', attribute: :headshot_or_other %>
          <%= render 'shared/attributes/date', attribute: :publish_at %>
          <%= render 'shared/attributes/text', attribute: :photo %>
          <%# ðŸš… super scaffolding will insert new fields above this line. %>
        <% end %>
      <% end %>

      <% p.content_for :actions do %>
        <%= link_to t('.buttons.edit'), [:edit, :account, @press_kit_photo_and_headshot], class: first_button_primary if can? :edit, @press_kit_photo_and_headshot %>
        <%= button_to t('.buttons.destroy'), [:account, @press_kit_photo_and_headshot], method: :delete, class: first_button_primary, data: { confirm: t('.buttons.confirmations.destroy', model_locales(@press_kit_photo_and_headshot)) } if can? :destroy, @press_kit_photo_and_headshot %>
        <%= link_to t('global.buttons.back'), [:account, @setting_press_kit, :press_kit_photo_and_headshots], class: first_button_primary %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
