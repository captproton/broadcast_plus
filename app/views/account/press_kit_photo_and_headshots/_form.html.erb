<%= form_with model: press_kit_photo_and_headshot, url: (press_kit_photo_and_headshot.persisted? ? [:account, press_kit_photo_and_headshot] : [:account, @setting_press_kit, :press_kit_photo_and_headshots]), local: true, class: 'form' do |form| %>
  <%= render 'account/shared/forms/errors', form: form %>

  <% with_field_settings form: form do %>
    <%= render 'shared/fields/text_field', method: :title, options: {autofocus: true} %>
    <%= render 'shared/fields/text_area', method: :description %>
    <%= render 'shared/fields/text_field', method: :dimensions_wxh %>
    <%= render 'shared/fields/text_field', method: :headshot_or_other %>
    <%= render 'shared/fields/date_field', method: :publish_at %>
    <%= render 'shared/fields/file_field', method: :photo %>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
  <% end %>

  <div class="buttons">
    <%= form.submit (form.object.persisted? ? t('.buttons.update') : t('.buttons.create')), class: "button" %>
    <% if form.object.persisted? %>
    <%= link_to t('global.buttons.cancel'), [:account, press_kit_photo_and_headshot], class: "button-secondary" %>
    <% else %>
    <%= link_to t('global.buttons.cancel'), [:account, @setting_press_kit, :press_kit_photo_and_headshots], class: "button-secondary" %>
    <% end %>
  </div>

<% end %>
