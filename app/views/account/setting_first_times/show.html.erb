<%= render 'account/shared/page' do |p| %>
  <% p.content_for :title, t('.section') %>
  <% p.content_for :body do %>
    <%= render 'account/shared/box', divider: true do |p| %>
      <% p.content_for :title, t('.header') %>
      <% p.content_for :description do %>
        <%= t('.description') %>
        <%= t('.manage_description') if can? :manage, @setting_first_time %>
      <% end %>

      <% p.content_for :body do %>
        <% with_attribute_settings object: @setting_first_time, strategy: :label do %>
          <%= render 'shared/attributes/text', attribute: :hero_title %>
          <%= render 'shared/attributes/text', attribute: :hero_image %>
          <%= render 'shared/attributes/text', attribute: :first_name %>
          <%= render 'shared/attributes/text', attribute: :last_name %>
          <%= render 'shared/attributes/html', attribute: :biography %>
          <%= render 'shared/attributes/text', attribute: :featured_aside_image %>
          <%= render 'shared/attributes/text', attribute: :blurb %>
          <%= render 'shared/attributes/text', attribute: :twitter_handle %>
          <%= render 'shared/attributes/text', attribute: :featured_youtube_video_url %>
          <%# ðŸš… super scaffolding will insert new fields above this line. %>
        <% end %>
      <% end %>

      <% p.content_for :actions do %>
        <%= link_to t('.buttons.edit'), [:edit, :account, @setting_first_time], class: first_button_primary if can? :edit, @setting_first_time %>
        <%= button_to t('.buttons.destroy'), [:account, @setting_first_time], method: :delete, class: first_button_primary, data: { confirm: t('.buttons.confirmations.destroy', model_locales(@setting_first_time)) } if can? :destroy, @setting_first_time %>
        <%= link_to t('global.buttons.back'), [:account, @site, :setting_first_times], class: first_button_primary %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
