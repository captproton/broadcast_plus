<% team = @team || @team %>
<% context ||= team %>
<% collection ||= :sites %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<%= render 'account/shared/box' do |p| %>
  <% p.content_for :title, t(".contexts.#{context.class.name.underscore}.header") %>
  <% p.content_for :description do %>
    <%= t(".contexts.#{context.class.name.underscore}.description#{"_empty" unless sites.any?}") %>
  <% end %>

  <% p.content_for :table do %>
    <% if sites.any? %>
      <table class="table">
        <thead>
          <tr>
            <%# ðŸš… super scaffolding will insert new field headers above this line. %>
            <th><%= t('.fields.created_at.heading') %></th>
            <th class="text-right"></th>
          </tr>
        </thead>
        <tbody>
          <% sites.each do |site| %>
            <% with_attribute_settings object: site do %>
              <tr data-id="<%= site.id %>">
                <%# ðŸš… super scaffolding will insert new fields above this line. %>
                <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
                <td class="buttons">
                  <% unless hide_actions %>
                    <% if can? :edit, site %>
                      <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, site], class: 'button-secondary button-smaller' %>
                    <% end %>
                    <% if can? :destroy, site %>
                      <%= button_to t('.buttons.shorthand.destroy'), [:account, site], method: :delete, data: { confirm: t('.buttons.confirmations.destroy', model_locales(site)) }, class: 'button-secondary button-smaller' %>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    <% end %>
  <% end %>

  <% p.content_for :actions do %>
    <% unless hide_actions %>
      <% if context == team %>
        <% if can? :create, Site.new(team: team) %>
          <%= link_to t('.buttons.new'), [:new, :account, team, :site], class: "#{first_button_primary(:site)} new" %>
        <% end %>
      <% end %>

      <% unless hide_back %>
        <%= link_to t('global.buttons.back'), [:account, context], class: "#{first_button_primary(:site)} back" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
