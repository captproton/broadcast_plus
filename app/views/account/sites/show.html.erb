<%= render 'account/shared/page' do |p| %>
  <% p.content_for :title, t('.section') %>
  <% p.content_for :body do %>
    <%= render 'account/shared/box', divider: true do |p| %>
      <% p.content_for :title, t('.header') %>
      <% p.content_for :description do %>
        <%= t('.description') %>
        <%= t('.manage_description') if can? :manage, @site %>
      <% end %>

      <% p.content_for :body do %>
        <% with_attribute_settings object: @site, strategy: :label do %>
          <%= render 'shared/attributes/text', attribute: :name %>
          <%# ðŸš… super scaffolding will insert new fields above this line. %>
        <% end %>
      <% end %>

      <% p.content_for :actions do %>
        <%= link_to t('.buttons.edit'), [:edit, :account, @site], class: first_button_primary if can? :edit, @site %>
        <%= button_to t('.buttons.destroy'), [:account, @site], method: :delete, class: first_button_primary, data: { confirm: t('.buttons.confirmations.destroy', model_locales(@site)) } if can? :destroy, @site %>
        <%= link_to t('global.buttons.back'), [:account, @team, :sites], class: first_button_primary %>
      <% end %>
    <% end %>

    <%= render 'account/wallpapers/index', wallpapers: @site.wallpapers, hide_back: true %>
    <%= render 'account/books/index', books: @site.books, hide_back: true %>
    <%= render 'account/events/index', events: @site.events, hide_back: true %>
    <%= render 'account/media_appearances/index', media_appearances: @site.media_appearances, hide_back: true %>
    <%= render 'account/publisher_accounts/index', publisher_accounts: @site.publisher_accounts, hide_back: true %>
    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
