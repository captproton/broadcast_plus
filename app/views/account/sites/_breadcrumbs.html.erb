<% site ||= @site %>
<% team ||= @team || site&.team %>
<%= render 'account/teams/breadcrumbs', team: team %>
<%= render 'account/shared/breadcrumb', label: t('.label'), url: [:account, team, :sites] %>
<% if site&.persisted? %>
  <%= render 'account/shared/breadcrumb', label: site.label_string, url: [:account, site] %>
<% end %>
<%= render 'account/shared/breadcrumbs/actions', only_for: 'sites' %>
