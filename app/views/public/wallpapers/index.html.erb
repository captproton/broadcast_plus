    <div class="ct-page-wrapper container">
      <h1 class="ct-liner">Wallpapers</h1>
      <div class="ct-page-content">
        <style>
        .wallpaper-wrapper{display:flex;justify-content:center;flex-wrap:wrap;}.wallpaper-image{margin:12px;padding:4px;width:225px;height:400px;background:#f3f3f3;box-shadow:0 0 10px 3px rgba(0,0,0,.1);transition:opacity 180ms ease;cursor:pointer}.wallpaper-image:hover{opacity:.8}
