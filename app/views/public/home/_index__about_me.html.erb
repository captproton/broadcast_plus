<%#
style and script for the watch this modal is on the home index.html.erb

%>

  <section class="ct-section">
    <div class="container">
    <div class="about-me-text-and-billboard">
      <div class="ct-col-module">
        <h1 class="ct-liner">
          <%= link_to @home_info.bio_link_label, biography_path %>
        </h1>          
        <p>
          <%= @home_info.biography_blurb %>
        </p>
        <p>&nbsp;</p>
        <div class="ct-section-footer text-right">
          <a class="link-blue link-bold"
               href="/biography/">Read <%= @possesive %> Story &gt;&gt;</a>
        </div>
      </div>
      <div class="ct-col-module">
        <div class="ct-billboard ct-billboard-white ct-billboard-small">
          <div class="ct-billboard-header text-right">
            <h4 class="h3 ct-h-welter50">Watch This</h4>
          </div>
          <%= render partial: '/shared/youtube_embed', 
            locals: { image_url:   @featured_youtube_image_url,
                      video_id:         @youtube_video_id,
                      video_url:        @featured_youtube_video_url
            } 
          %>

        </div>
      </div>
    </div>
</div>
 
